<h3 class="question-detail">{{question.title}}</h3>
<h4 class="question-sub-header">Asked by {{question.author}} {{moment-from-now question.timestamp}}</h4>
<p class="question-body">
  {{question.body}}
  {{update-question question=question updateQuestion="updateQuestion"}}
</p>
<button {{action 'deleteQuestion' question}} class="btn">Delete</button>
<button {{action 'toggleFavorited' question}} class="btn">Toggle Favorite</button>
<hr>
<h3>Answers:</h3>
{{#each question.answers as | answer |}}
  {{answer-tile answer=answer}}
{{/each}}
{{new-answer postAnswer="postAnswer" question=question}}
