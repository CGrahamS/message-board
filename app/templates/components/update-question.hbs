{{#if updateHidden}}
  <button class="btn" {{action 'showUpdate'}}>Update</button>
{{else}}
  <form>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=question.author id="author" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="title">Question:</label>
      {{input value=question.title id="title" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="body">Description:</label>
      {{textarea value=question.body id="body" class="form-control"}}
    </div>
    <button class="btn" {{action 'updateQuestion' question}}>Update</button>
    <button class="btn" {{action 'cancelUpdate'}}>Cancel</button>
  </form>
{{/if}}
